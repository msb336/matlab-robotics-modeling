clear all;close all;clc;
%% Build Robot
linkends = [0 0 2; 0 0 1; 1 0 0; 1 0 0; 0 1 1; 0 2 3];
df = {{'z','thz', 'thy'}, {'thx'}, {'thx'}};
numdf = 5;
[~, T] = buildtransform(linkends, df, true);
%%
x = @(t)([sin(t); 0.2*t; 0.1*t; 0.4*t; -t]);

for t = 0:0.1:20
    for i = 1:length(T)
        point(:,i) = T{i}(x(t))*[zeros(3,1);1];
    end
    hold off
    plot3(0,0,0);
    plot3dvectors(point(1:3,:), '*-')
    axis([-2 5 -2 5 -2 5])
    xlabel('x');ylabel('y');zlabel('z');
    pause(0.01)
end


